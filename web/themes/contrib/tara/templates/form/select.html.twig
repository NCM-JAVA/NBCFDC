{#
/**
 * @file
 * Theme override for a select element.
 *
 * Available variables:
 * - attributes: HTML attributes for the <select> tag.
 * - options: The <option> element children.
 *
 * @see template_preprocess_select()
 */
#}
{% apply spaceless %}
  <select{{ attributes }}>
    {% for option in options %}
      {% if option.type == 'optgroup' %}
        <optgroup label="{{ option.label }}">
          {% for sub_option in option.options %}
            {# Add title based on language or other logic #}
            {% if sub_option.label == 'Hindi' %}
              <option value="{{ sub_option.value }}"{{ sub_option.selected ? ' selected="selected"' }} title="Click here for Hindi version.">{{ sub_option.label }}</option>
            {% elseif sub_option.label == 'English' %}
              <option value="{{ sub_option.value }}"{{ sub_option.selected ? ' selected="selected"' }} title="Click here for English version.">{{ sub_option.label }}</option>
            {% else %}
              <option value="{{ sub_option.value }}"{{ sub_option.selected ? ' selected="selected"' }}>{{ sub_option.label }}</option>
            {% endif %}
          {% endfor %}
        </optgroup>
      {% elseif option.type == 'option' %}
        {# Add title based on language or other logic #}
        {% if option.label == 'Hindi' %}
          <option value="{{ option.value }}"{{ option.selected ? ' selected="selected"' }} title="Click here for Hindi version.">{{ option.label }}</option>
        {% elseif option.label == 'English' %}
          <option value="{{ option.value }}"{{ option.selected ? ' selected="selected"' }} title="Click here for English version.">{{ option.label }}</option>
        {% else %}
          <option value="{{ option.value }}"{{ option.selected ? ' selected="selected"' }}>{{ option.label }}</option>
        {% endif %}
      {% endif %}
    {% endfor %}
  </select>
{% endapply %}